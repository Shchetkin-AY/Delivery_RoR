<%= form_with(model: @agent) do |f| %>
  <div class="card">
    <div class="card-body">
      <div class="mb-3">
      <form>
        <div class="field form-group">
          <%= f.label :brand, {class: "form-label"} %>
          <%= f.text_field :brand, class:"form-control", placeholder: "Брэнд" %>
        </div><br>

        <div class="field form-group">
          <%= f.label :phone, {class: "form-label"} %>
          <%= f.text_field :phone, class:"form-control", placeholder: "Телефон" %>
        </div><br>

        <div class="field form-group">
          <%= f.label :inn, {class: "form-label"} %>
          <%= f.text_field :inn, class:"form-control", placeholder: "ИНН" %>
        </div><br>

        <br>
        <div class="actions">
          <%= f.submit "Сохранить", class:"btn btn-success" %>
          <%= link_to 'Отмена', agents_path, :class => 'btn btn-secondary' %>
        </div>
      </form>
      </div>
    </div>
  </div>
<% end %>